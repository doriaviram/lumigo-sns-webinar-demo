{
  "env": {
    "browser": false,
    "es6": true,
    "mocha": true,
    "node": true,
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "globals": {
    "console": true,
    "require": true,
    "module": true,
    "process": true,
    "setTimeout": true
  },

  "plugins": [
    "jest",
    "@typescript-eslint"
  ]
}